{
  "name": "basic-react-sandbox",
  "version": "1.0.0",
  "description": "Basic environment for React, Babel, Sass, StyleComponents",
  "main": "index.js",
  "scripts": {
    "dev": "webpack-dev-server --inline --hot",
    "build:prod": "NODE_ENV=production webpack --mode production",
    "build:ssr": "npx babel src/ --out-dir ssrBuild --copy-files",
    "generate-ssr-strings-old": "node ssrBuild/oldStyledComponentsApproach/SSRSimulation.js",
    "generate-ssr-strings-new": "node ssrBuild/newCssApproach/SSRSimulation.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Capterra",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-styled-components": "~1.8.0",
    "babel-preset-airbnb": "^2.5.3",
    "css-loader": "^3.2.1",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.13.0",
    "raw-loader": "^4.0.0",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.1",
    "url-loader": "^3.0.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  },
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "styled-components": "^3.4.2"
  }
